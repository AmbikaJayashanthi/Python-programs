def is_montonic(arr):
    increasing=True
    decreasing=True
    
    for i in range(1,len(arr)):
        if arr[i]>arr[i-1]:
            decreasing=False
        elif arr[i]<arr[i-1]:
            increasing=False
    return increasing or decreasing
arr1=[1,2,4,5]
arr2=[5,4,3,1]
arr3=[1,2,4,3]

print(arr1," is monotonic ",is_montonic(arr1))
print(arr2," is monotonic",is_montonic(arr2))
print(arr3," is monotonic",is_montonic(arr3))